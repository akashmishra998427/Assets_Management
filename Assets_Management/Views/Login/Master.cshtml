@await Html.PartialAsync("HeaderPritialView")
@{
	Layout = null;
}

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Inventory</title>
	<script src="~/font-awesome/js/all.js"></script>
	<script src="~/font-awesome/js/all.min.js"></script>
	<link href="~/font-awesome/css/all.css" rel="stylesheet" />
	<link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
	<script src="~/bootstrap/js/bootstrapbundle.js"></script>
	<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<link href="~/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
	<link href="~/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
	<style>
		body {
			font-family: "Poppins", Helvetica, Arial, sans-serif;
			display: flex;
			flex-direction: column;
			margin: 0;
			background-color: rgba(240, 240, 240, 0.822);
			min-height: 100vh;
		}

		#toggleButton {
			display: none;
		}

		#container {
			display: flex;
			flex-direction: column;
			margin: 0;
			margin-top: -150px;
			background-color: rgba(240, 240, 240, 0.822);
			min-height: 100vh;
			align-items: center;
			justify-content: center;
		}

		.card {
			box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
			border: 0;
			border-radius: var(--bs-border-radius-lg);
		}

		.card .card-body .card-title {
			text-align: center;
		}

		.card .card-body .btn {
			background: linear-gradient(135deg, #0097d7, #1474A4);
			font-weight: 900;
			color: var(--bs-white);
			width: 100%;
			padding: 2rem;
		}

		.card .card-body .btn:hover {
			background: linear-gradient(135deg, #0097d7, #1474A4);
			transform: scale(1.05);
			color: var(--bs-white);
		}

		.card .card-body {
			padding: 2rem;
		}

		.card .card-body i {
			font-size: 30px;
		}

		.card .card-body ul {
			list-style: none;
			margin: 0;
			padding: 0;
			display: flex;
			align-items: center;
			gap: 1rem;
			margin-top: 2rem;
		}

		.card .card-body ul li {
			width: 100%;
		}

		@@media screen and (max-width:768px) {
			.card .card-body ul {
				flex-direction: column;
			}
		}
	</style>
</head>

<body>
	<div id="container">
		<div class="container">
			<div class="row" style="margin-top:9%;">
				<div class="col-lg-6 mx-auto">
					<div class="card">
						<div class="card-body">
							<h1 class="card-title fw-bolder">Select Department</h1>
							<ul>
								<li>
									<a id="btnIT" href="#" class="btn btn-lg" onclick="redirect()">
										<i class="bi bi-laptop"></i> IT Department
									</a>
								</li>
								<li>
									<a id="btnProd" href="@Url.Action("Production", "Dashboard")" class="btn btn-lg">
										<i class="bi bi-gear-wide"></i> Production
									</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
<script>
	 let authToken = localStorage.getItem("authToken");
	 const baseURL = window.location.origin;

	 if (!authToken)
		 {
			 window.location.href = "/Login/Login";
		 }
	
	 $(document).ready(function() {
		 let redirectURL = sessionStorage.getItem("redirectAfterLogin");
		 console.log(redirectURL)
		 if (redirectURL) {
			console.log(redirectURL)
			sessionStorage.removeItem("redirectAfterLogin");
			window.location.href = redirectURL;
		 }
	 });
	 
	 function redirect() {
		 let userRole = sessionStorage.getItem("UserRole");
		 if (userRole !== "ADMIN") {
			 $('.hide').hide();
			 window.location.href = "/assets/genrateAssetQR";
		 } else {
			 $('.hide').show();
			window.location.href = "/Dashboard/It";
		 }
	 }

</script>